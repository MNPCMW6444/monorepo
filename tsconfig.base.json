{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "module": "CommonJS",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@auth-backend": ["libs/auth-backend/src/index.ts"],
      "@autodesk-backend": ["libs/autodesk-backend/src/index.ts"],
      "@base-backend": ["libs/base-backend/src/index.ts"],
      "@base-frontend": ["libs/base-frontend/src/index.ts"],
      "@base-shared": ["libs/base-shared/src/index.ts"],
      "@chat-backend": ["libs/chat-backend/src/index.ts"],
      "@email-backend": ["libs/email-backend/src/index.ts"],
      "@payments-backend": ["libs/payments-backend/src/index.ts"],
      "@redis-backend": ["libs/redis-backend/src/index.ts"],
      "@s3-backend": ["libs/s3-backend/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
