{
  "name": "base-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/base-backend/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/base-backend",
        "tsConfig": "libs/base-backend/tsconfig.lib.json",
        "project": "libs/base-backend/package.json",
        "entryFile": "libs/base-backend/src/index.ts",
        "assets": [
          {
            "glob": "**/*.json",
            "input": "libs/base-backend/src",
            "output": "."
          }
        ]
      },
      "dependsOn": [
        {
          "target": "postbuild",
          "projects": "self"
        }
      ]
    },
    "postbuild": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if [ -d dist/libs/base-backend ]; then babel dist/libs/base-backend --out-dir dist/libs/base-backend --extensions \".js,.ts\" --config-file ./.babelrc; fi"
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  },
  "tags": []
}