{
  "name": "base-shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/base-shared/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/{projectRoot}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/base-shared",
        "tsConfig": "libs/base-shared/tsconfig.lib.json",
        "project": "libs/base-shared/package.json",
        "entryFile": "libs/base-shared/src/index.ts",
        "assets": [
          {
            "glob": "**/*.json",
            "input": "libs/base-shared/src",
            "output": "."
          }
        ]
      },
      "dependsOn": [
        {
          "target": "postbuild",
          "projects": "self"
        }
      ]
    },
    "postbuild": {
      "executor": "nx:run-commands",
      "options": {
        "command": "if [ -d dist/libs/base-shared ]; then babel dist/libs/base-shared --out-dir dist/libs/base-shared --extensions \".js,.ts\"; fi"

      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    }
  },
  "tags": []
}
